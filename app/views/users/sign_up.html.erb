    <h1>Registration</h1>

   <div class='row-fluid'>
     <div class='span9'>


        <div class="block-fluid">
          <%= simple_form_for @model_object,
            defaults: { wrapper_html: {class: 'row-form'},
                        input_html: { class: 'span6' },
                        label_html: { class: 'span3' } } do |form| %>

                        <%= form.input :username, required: false %>
                        <%= form.input :email %>
                        <%= form.input :password, required: true %>
                        <%= form.input :password_confirmation, required: true %>
                        <%= form.input :active %>

                        <div class='row-form'>
                          <%= form.submit 'Register', class: 'btn btn-success' %>
                        </div>

                      <% end %>
        </div>

      </div>
    </div>

</div>


